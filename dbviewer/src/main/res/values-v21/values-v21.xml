<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="db_viewer_theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/db_viewer_action_style</item>
        <item name="android:statusBarColor">@color/db_viewer_background</item>
    </style>
    <style name="db_viewer_action_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/db_viewer_content_background</item>
        <item name="android:titleTextStyle">@style/db_viewer_action_text_style</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:displayOptions">showTitle</item>
    </style>
    <style name="db_viewer_action_text_style">
        <item name="android:textColor">@color/db_viewer_text_color</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>